<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="panel-title">Contact Form</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-4">
          <div class="panel">
            <div class="panel-body">
              {{#if user.picture}}
                <img src="{{user.picture}}">
              {{else}}
                <img src="{{user.gravatar}}">
              {{/if}}
            </div>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="panel">
            <div class="panel-body">
              <img src="../images/book6.jpg" class="center-block" class="img-responsive" style="width: 100%;"/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
